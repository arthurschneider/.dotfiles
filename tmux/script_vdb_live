SESSION_NAME="vdb-live"
WINDOW_NAME="shell"

tmux has-session -t $SESSION_NAME

if [ $? != 0 ];
then
    tmux new-session -s $SESSION_NAME -n $WINDOW_NAME -d

    tmux split-window -h -t $SESSION_NAME

    tmux send-keys -t $SESSION_NAME:0.0 'ssh vdb-app1' C-m
    tmux send-keys -t $SESSION_NAME:0.1 'ssh vdb-app2' C-m

    # Send clear console to the panes
    tmux send-keys -t $SESSION_NAME:0.0 C-l C-m
    tmux send-keys -t $SESSION_NAME:0.1 C-l C-m

fi

tmux attach -t $SESSION_NAME

